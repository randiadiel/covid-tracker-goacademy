<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_indonesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/indonesia"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info"
        android:background="@null"
        android:contentDescription="@string/information" />

    <ImageView
        android:id="@+id/iv_covid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/red_covid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_indonesia"
        android:contentDescription="@string/red_covid" />

    <TextView
        android:id="@+id/tv_cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/_86521"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/ib_information"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_total_cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/karla_regular"
        android:text="@string/total_cases"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cases" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="508dp"
        android:layout_marginTop="228dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_indonesia"
        android:background="@drawable/white_rounded_bg">

        <LinearLayout
            android:id="@+id/blue_rounded_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/teal_rounded_bg"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_positive_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/_36977"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_positive_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karla_regular"
                android:text="@string/positive"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/green_rounded_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/green_rounded_bg"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_recovered_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/_45401"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_recovered_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karla_regular"
                android:text="@string/recovered"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/red_rounded_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="268dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/red_rounded_bg"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_death_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/_4143"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_death_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karla_regular"
                android:text="@string/death"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_know_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/get_to_know_more"
            android:textColor="@color/indigo2"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue_rounded_layout" />

        <LinearLayout
            android:id="@+id/blue_alice_rounded_bg1"
            android:layout_width="332dp"
            android:layout_height="94dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/blue_alice_rounded_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_know_more">


            <ImageView
                android:id="@+id/iv_global"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/global_map"
                android:contentDescription="@string/global_map" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_look_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/look_up"
                    android:textColor="@color/indigo2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_look_up_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karla_regular"
                    android:text="@string/see_details_by_province_all_over_indonesia"
                    android:textColor="@color/soft_indigo"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_look_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:contentDescription="@string/right_arrow"
                android:src="@drawable/soft_right_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blue_alice_rounded_bg2"
            android:layout_width="332dp"
            android:layout_height="94dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/blue_alice_rounded_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue_alice_rounded_bg1">


            <ImageView
                android:id="@+id/iv_siren"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/siren"
                android:contentDescription="@string/siren" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hot_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/hot_line"
                    android:textColor="@color/indigo2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_hot_line_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karla_regular"
                    android:text="@string/check_emergency_number_to_contact"
                    android:textColor="@color/soft_indigo"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_hotline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:src="@drawable/soft_right_arrow"
                android:contentDescription="@string/right_arrow" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>