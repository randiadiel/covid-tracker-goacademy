<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_item_hotline_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_bold"
            android:textColor="@color/indigo"
            app:layout_constraintStart_toEndOf="@+id/iv_item_hotline_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0815112122" />

        <TextView
            android:id="@+id/tv_item_hotline_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Kementrian Kesehatan"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_hotline_image"
            app:layout_constraintEnd_toStartOf="@+id/btn_item_hotline_call"
            app:layout_constraintStart_toEndOf="@+id/iv_item_hotline_image" />

        <ImageView
            android:id="@+id/iv_item_hotline_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/image_provinsi" />

        <Button
            android:id="@+id/btn_item_hotline_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_telephone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>